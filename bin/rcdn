#!/bin/sh

: ${RCM_LIB:=`dirname $0`/../share/rcm}
. $RCM_LIB/rcm.sh

remove_link() {
  local dest=$1
  local original=$2

  if [ x$dest = "x/" ]; then
    $VERBOSE "not a symlink, skipping: $original"
  elif [ -L $dest ]; then
    $RM -rf $dest
    rmdir -p `dirname $original` 2>/dev/null
  else
    remove_link `dirname $dest` $original
  fi
}

handle_command_line() {
  local arg_tags=
  local verbosity=0
  local version=0
  local dotfiles_dirs=
  local files=
  local excludes=
  local includes=

  while getopts VqvI:e:t:d: opt; do
    case "$opt" in
      e) excludes="$excludes $OPTARG";;
      I) includes="$includes $OPTARG";;
      t) arg_tags="$arg_tags $OPTARG" ;;
      v) verbosity=$(($verbosity + 1));;
      q) verbosity=$(($verbosity - 1));;
      d) dotfiles_dirs="$dotfiles_dirs $OPTARG" ;;
      V) version=1
    esac
  done
  shift $(($OPTIND-1))

  handle_common_flags rcup $version $verbosity

  tags=${arg_tags:-$TAGS}
  dotfiles_dirs=${dotfiles_dirs:-$DOTFILES_DIRS}
  files=$@

  for tag in $tags; do
    LS_ARGS="$LS_ARGS -t $tag"
  done
  for dotfiles_dir in $dotfiles_dirs; do
    LS_ARGS="$LS_ARGS -d $dotfiles_dir"
  done
  for exclude in $excludes; do
    LS_ARGS="$LS_ARGS -e $exclude"
  done
  for include in $includes; do
    LS_ARGS="$LS_ARGS -I $include"
  done
  LS_ARGS="$LS_ARGS $files"

  $DEBUG "LS_ARGS: $LS_ARGS"
}

if [ -e $HOME/.rcrc ]; then
  . $HOME/.rcrc
fi

handle_command_line $*

for dest_and_src in `lsrc $LS_ARGS`; do
  dest=`echo $dest_and_src | sed 's/:.*//'`
  src=`echo $dest_and_src | sed 's/.*://'`

  remove_link $dest $dest
done
